<?xml version="1.0" encoding="UTF-8" ?>
<resources>
	<style name="Theme.Splash" parent="android:Theme">
		<item name="android:background">@color/white</item>
    	<item name="android:windowNoTitle">true</item>
 	</style>

  <style name="RSTheme" parent="RSTheme.Base">
  </style>

  <style name="RSTheme.Base" parent="Theme.AppCompat.Light">
    <item name="android:windowNoTitle">true</item>
    <item name="windowActionBar">false</item>

    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">@color/white</item>
    <item name="colorAccent">@color/grey</item>  	
  </style>

  <style name="ActionBarThemeOverlay" parent="Theme.AppCompat.Light">
        <!-- android:textColorPrimary is the  color of the title text
       in the Toolbar, in the Theme.AppCompat theme:  -->
  		<item name="android:textColorPrimary">@color/black</item>
       	<item name="android:background">@color/white</item>
 </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>

