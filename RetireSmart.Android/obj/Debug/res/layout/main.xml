<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/rsheader" />
    <EditText
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:id="@+id/UsernameText"
        android:hint="@string/username_hint"
        android:textColor="#ff000000"
        android:layout_gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:password="true"
        android:singleLine="true" />
    <View
        android:layout_height="1dp"
        android:background="#A7A9AC"
        android:layout_width="match_parent"
        android:id="@+id/divider"
        android:layout_marginLeft="20dp" />
    <EditText
        android:inputType="textPassword"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:id="@+id/PasswordText"
        android:hint="@string/password_hint"
        android:password="false"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
<!--   <ImageButton
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:src="@drawable/logon_button"
        android:id="@+id/LoginButton" /> -->
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/LoginButton"
        android:background="#2C8B98"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progress_login"
        android:indeterminate="true"
        android:layout_marginTop="10dp"
        android:visibility="gone" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:text="@string/login_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_login_help"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mm_blue" />
        <View
            android:layout_height="wrap_content"
            android:background="@color/mm_blue"
            android:layout_width="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />
        <TextView
            android:text="@string/forgot_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_forgot_login"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/mm_blue" />
    </LinearLayout>
    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/mmlogojpg" />
    </RelativeLayout>
</LinearLayout>